{% extends '_layout.twig' %}

{% set colTwoLeftContentElements = [ 'base/h1', 'base/h2', 'base/h3', 'base/text', 'base/button'] %}
{% set colTwoRightContentElements = [ 'base/figure'] %}
{% set colOneContentElements = [ 'base/table', 'layout/spacer', 'base/accordion', 'layout/spacer', 'base/news-snippet', 'layout/spacer', 'base/video', 'layout/spacer', 'base/social-media-share'] %}
{% set formElements = [ 'base/h2', 'form/multi-column', 'form/form-field-tel', 'form/text-area', 'form/select', 'form/checkbox', 'form/radio'] %}
{% set colThreeContentElements = [ 'base/card'] %}
{% set colFourContentElements = [ 'base/figure'] %}

{% block content %}
    {% include '@bsi-cx/design-standard-library-web/content-elements/advanced/webcam-image-upload/template.twig' %}

    {% embed '@bsi-cx/design-standard-library-web/content-elements/layout/col-two/template.twig' %}
        {% block col_two_dropzone_1 %}

            {% for element in colTwoLeftContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
        {% block col_two_dropzone_2 %}

            {% for element in colTwoRightContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
    {% endembed %}

    {% include '@bsi-cx/design-standard-library-web/content-elements/layout/spacer/template.twig' %}

    {% embed '@bsi-cx/design-standard-library-web/content-elements/layout/col-one/template.twig' %}
        {% block col_one_dropzone %}

            {% for element in colOneContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

            {% include '@bsi-cx/design-standard-library-web/content-elements/layout/spacer/template.twig' %}

            {% embed '@bsi-cx/design-standard-library-web/content-elements/form/form-container/template.twig' %}
                {% block form_container_dropzone %}

                    {% for element in formElements %}
                        {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
                    {% endfor %}

                {% endblock %}
            {% endembed %}

        {% endblock %}
    {% endembed %}

    {% include '@bsi-cx/design-standard-library-web/content-elements/layout/spacer/template.twig' %}

    {% embed '@bsi-cx/design-standard-library-web/content-elements/layout/col-three/template.twig' %}
        {% block col_three_dropzone_1 %}

            {% for element in colThreeContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
        {% block col_three_dropzone_2 %}

            {% for element in colThreeContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
        {% block col_three_dropzone_3 %}

            {% for element in colThreeContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
    {% endembed %}

    {% include '@bsi-cx/design-standard-library-web/content-elements/layout/spacer/template.twig' %}

    {% embed '@bsi-cx/design-standard-library-web/content-elements/layout/col-four/template.twig' %}
        {% block col_four_dropzone_1 %}

            {% for element in colFourContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
        {% block col_four_dropzone_2 %}

            {% for element in colFourContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
        {% block col_four_dropzone_3 %}

            {% for element in colFourContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
        {% block col_four_dropzone_4 %}

            {% for element in colFourContentElements %}
                {% include '@bsi-cx/design-standard-library-web/content-elements/' ~ element ~ '/template.twig' %}
            {% endfor %}

        {% endblock %}
    {% endembed %}

{% endblock %}