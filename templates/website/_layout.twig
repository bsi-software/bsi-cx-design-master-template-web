<!DOCTYPE html>
<html lang="{% verbatim %}{{locale}}{% endverbatim %}">
    <head>
        <title>{% verbatim %}{{ navigation.activePage.pageTitle }}{% endverbatim %}</title>
        {% include  './../shared/html-header.twig' %}
        
        {# Delete if Google reCAPTCHA is unused #}
        <script src="https://www.google.com/recaptcha/enterprise.js" async defer></script>
    </head>

    <body class="d-flex flex-column min-vh-100 bsi-dm-bg-color">
    {% apply spaceless %}
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container {{ properties.logoAlignment }}">
                <div class="navbar-brand">
                    {% block logo %}{% endblock %}
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                {% block navigation %}{% endblock %}
            </div>
        </nav>
        {% block header %}{% endblock %}

        <div id="content" class="mb-4 flex-grow-1 d-flex flex-column">
            {% block content %}{% endblock %}
        </div>

        {% block footer %}{% endblock %}

    {% endapply %}

    <script src="{{ bsi_cx_js_module_runtime_href() }}" data-bsi-remove-if="draft" defer="defer"></script>
    {{ bsi_cx_js_module_missing_chunks_import() }}
    </body>
</html>
